<div class="center hero-unit">
	<h2>Type Details</h2>

    <div class="row">
    	<div class="span6 offset3">
            <%= render partial: "type_sets", locals: { type_set: @type_set, button_label: "Create Type"} %>
	    </div>
    </div>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th colspan="1"></th>
                <th colspan="1">Name</th>
                <th colspan="1">Code</th>
                <th colspan="1">Description</th>
                <th colspan="1"></th>
                <th colspan="1"></th>
            </tr>
        </thead>
        <tbody>
   	       <%= render @type_set.type_elements %>
        </tbody> 
    </table>
    <div class="pull-left">
        <%= link_to "Add new element", new_type_set_type_element_path( @type_set ) %>
     </div>
    <div class="row">
        <%= link_to "Back", type_sets_path %>
    </div>
</div>