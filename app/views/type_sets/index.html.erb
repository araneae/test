<div class="center hero-unit">
  <h3>System Types</h3>
  <p></p>
  <table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
        <th colspan="1"></th>
        <th colspan="1">Name</th>
        <th colspan="1">Code</th>
        <th colspan="1">Description</th>
        <th colspan="1"></th>
        <th colspan="1"></th>
    </tr>
  </thead>
    <tbody>
      <% for type in @type_sets %>
         <tr id="type_set_<%= type.id %>">
          <td> </td>
          <td><%= type.name %></td>
          <td><%= link_to type.code , type_set_path(type) %></td>
          <td> <%= type.description %> </td>
          <td> <%= link_to 'Edit', edit_type_set_path(type) %></td>
          <td> <%= link_to 'Delete', type, method: :destroy, data: {confirm: 'Are you sure ?'} %> </td>
         </tr>
      <% end %> 
     </tbody> 
  </table>
  <div class="pull-left">
      <%= link_to 'Add a new Type', new_type_set_path %>
  </div>
</div>